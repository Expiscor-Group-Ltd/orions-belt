#!/bin/bash
# Network Interface Security Configuration
# Generated by Ansible Security Hardening Playbook
# Applied: {{ ansible_date_time.iso8601 }}

# Apply security settings to all network interfaces
for interface in $(ip link show | grep -E "^[0-9]+:" | awk -F: '{print $2}' | tr -d ' '); do
    # Skip loopback interface
    if [ "$interface" = "lo" ]; then
        continue
    fi
    
    # Apply security settings
    echo 1 > /proc/sys/net/ipv4/conf/$interface/rp_filter
    echo 0 > /proc/sys/net/ipv4/conf/$interface/accept_redirects
    echo 0 > /proc/sys/net/ipv4/conf/$interface/secure_redirects
    echo 0 > /proc/sys/net/ipv4/conf/$interface/accept_source_route
    echo 1 > /proc/sys/net/ipv4/conf/$interface/log_martians
    
    # IPv6 security settings
    echo 0 > /proc/sys/net/ipv6/conf/$interface/accept_redirects
    echo 0 > /proc/sys/net/ipv6/conf/$interface/accept_source_route
    
    echo "Applied security settings to interface: $interface"
done

# Log the configuration
logger "Network interface security settings applied by Ansible Security Hardening" 