# Access Control Configuration
# Generated by Ansible Security Hardening Playbook

# Access control format: permission : users : origins
# permission: + (allow) or - (deny)
# users: user names, groups, or ALL
# origins: tty names, hostnames, IP addresses, or ALL

# Allow root access only from local console
+ : root : LOCAL

# Allow all users from local console
+ : ALL : LOCAL

# Allow specific users from network (customize as needed)
# + : admin : 192.168.1.0/24
# + : admin : 10.0.0.0/8

# Deny all other access
- : ALL : ALL 